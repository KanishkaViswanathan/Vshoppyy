    <style>
        /* Your existing CSS styles */
        .input-box label {
            font-size: 13px; /* Adjust font size */
            margin-bottom: 3px; /* Adjust margin */
        }
        .input-field {
            width: calc(100% - 20px);
            padding: 3px 5px; /* Adjust padding vertically and horizontally */
            margin: 2px 0;
            border: 1px solid #ccc;
            border-radius: 2px;
            font-size: 14px; /* Adjust font size */
