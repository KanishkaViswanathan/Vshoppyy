                <div class="input-box">
                    <label for="registrationNumber">Registration Number</label>
                    <input type="text" name="reg" id="reg" class="input-field">
                </div>
                <div class="input-box">
                    <label for="signupName">Your Name</label>
                    <input type="text" name="uname" id="uname" class="input-field" >
                    </span>
                </div>
